<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.etapia.contactfrom.DetalleContact">

    <TextView

        android:id="@+id/myTitle"
        android:text="CONFIRMAR DATOS"
        android:layout_width="337dp"
        android:layout_height="wrap_content"

        android:background="?attr/colorButtonNormal"
        android:textColor="@android:color/background_dark"
        tools:textColor="@android:color/background_dark"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/nombred"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombred"
        android:layout_alignLeft="@+id/nombred"
        android:layout_alignStart="@+id/nombred"
        android:layout_marginTop="32dp"
        android:id="@+id/telefonod" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonod"
        android:layout_alignRight="@+id/telefonod"
        android:layout_alignEnd="@+id/telefonod"
        android:layout_marginTop="43dp"
        android:id="@+id/fecha" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonod"
        android:layout_alignRight="@+id/telefonod"
        android:layout_alignEnd="@+id/telefonod"
        android:layout_marginTop="43dp"
        android:id="@+id/correod" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correod"
        android:layout_alignLeft="@+id/correod"
        android:layout_alignStart="@+id/correod"
        android:layout_marginTop="64dp"
        android:id="@+id/descd" />

    <Button
        android:text="EDITAR DATOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editar" />
</LinearLayout>
